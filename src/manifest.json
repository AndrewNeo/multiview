{
    "name": "MultiView",
    "version": "2.1",
    "manifest_version": 2,
    "description": "Multiview is a page that lets you embed any website into a split page view.",
    "icons": {
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "homepage_url": "http://andrewneo.github.com/multiview-chrome/",
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["https://andrewneo.github.io/multiview-chrome/twitch_oauth.html"],
        "js": ["oauth_handler.js"]
    }],
    "browser_action": {
        "default_title": "Open MultiView"
    },
    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "alarms",
        "storage"
    ]
}