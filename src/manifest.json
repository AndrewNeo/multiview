{
	"name": "MultiView",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Multiview is a page that lets you embed any website into a split page view.",
	"icons": {
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"homepage_url": "http://andrewneo.github.com/multiview-chrome/",
	"options_page": "fourway.html",
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"<all_urls>",
		"webRequest",
		"webRequestBlocking"
	]
}